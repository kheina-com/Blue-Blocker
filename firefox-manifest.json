{
	"manifest_version": 2,
	"name": "Blue Blocker",
	"version": "0.3.0",
	"description": "Blocks all Twitter Blue verified users on twitter.com",
	"icons": {
		"128": "assets/icon-128.png"
	},
	"web_accessible_resources": [
		"constants.js",
		"utilities.js",
		"script.js",
		"shared.js",
		"injected/*",
		"parsers/*",
		"assets/*",
		"models/*"
	],
	"browser_action": {
		"browser_style": true,
		"default_icon": {
			"128": "assets/icon-128.png"
		},
		"default_title": "Blue Blocker",
		"default_popup": "popup/index.html"
	},
	"permissions": [
		"storage"
	],
	"content_scripts": [
		{
			"matches": [
				"*://*.twitter.com/*",
				"*://twitter.com/*"
			],
			"js": [
				"main.js"
			]
		}
	],
	"background": {
		"scripts": [
			"service_worker.js"
		],
		"type": "module"
	},
	"browser_specific_settings": {
		"gecko": {
			"id": "{119be3f3-597c-4f6a-9caf-627ee431d374}"
		}
	}
}
